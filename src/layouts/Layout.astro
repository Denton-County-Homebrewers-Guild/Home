---
import "../styles/main.css";
import Footer from "../layouts/Footer.astro";
import Navigation from "../components/Navigation.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/images/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Denton County Homebrewers Guild</title>
	</head>
	<body>
		<div class="viewport-container">
			<!-- Top Navigation -->
			<header class="site-header">
				<Navigation />
			</header>

			<!-- Main Content -->
			<main class="primary-content">
				<slot />
			</main>

			<!-- Footer -->
			<footer class="site-footer">
				<Footer />
			</footer>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		position: relative;
	}

	body::before {
		content: "";
		position: fixed;
		inset: 0;
		background:
			linear-gradient(rgba(104, 88, 72, 0.552), rgba(35, 20, 5, 0.65)),
			url("/images/beer-glass.jpg");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		z-index: -1;
	}

	.viewport-container {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		padding: 2rem;
		gap: 2rem;
	}

	.site-header {
		/* Top navigation area */
	}

	.primary-content {
		flex: 1;
	}

	.site-footer {
		/* Footer at bottom */
	}

	/* Responsive: Reduced padding on smaller screens */
	@media (max-width: 768px) {
		.viewport-container {
			padding: 1rem;
		}
	}
</style>
