---
import Social from "../components/Social.astro";
import socials from "../config/socials.json";
---

<footer>
  <div class="container">
    <div class="row items-center py-10">
      <div
        class="text-center lg:col-3 lg:mb-0 lg:text-left flex items-center justify-center lg:justify-start"
      >
        <a href="/" class="navbar-brand inline-flex items-center">
          <img src="/images/logo.png" height="48" width="48" alt="Logo" />
        </a>
      </div>
      <div
        class="text-center lg:col-3 lg:mb-0 lg:mt-0 lg:text-right flex items-center justify-center lg:justify-end"
      >
        <Social source={socials} className="social-icons" />
      </div>
    </div>
  </div>
</footer>
